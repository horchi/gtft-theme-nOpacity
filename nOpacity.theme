   Text text={p4.varStatusText},color={lightColor},size=28,height=40,x=1076,width=350;

#endif

   // Datum/Uhr oben rechts

   Text text={time/%H:%M},x=1179,y=270,size=42,color={tdColor},align=left,width=168,height=55;
