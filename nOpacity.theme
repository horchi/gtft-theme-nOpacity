   // Ausgabe recording info

   Text text={replayTitle},x=10,y=10,size=40,width=1000,height=65,lines=1,color={lightColor},scroll=ticker,scroll_count=0,delay=300ms;
   Text text={replaySubtitle},x=10,y=100,size=30,width=715,height=40;

