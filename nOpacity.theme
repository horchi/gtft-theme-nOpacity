//***************************************************************************
// Normal Replay
//***************************************************************************

[ReplayNormal]

   Background path=backgrounds/bg-replay.png;

   Defaults font=graphTFT,size=40,color={textColor},bg_red=0,bg_green=0,bg_blue=0,bg_alpha=0;

   Image condition={replayForward} = 1 & {replaySpeed} = -1 & {replayPlay} = 1,x=1090,y=270,path={symbols}/play.png;  // play
   Image condition={replayForward} = 1 & {replaySpeed} = -1 & {replayPlay} < 1,x=1090,y=270,path={symbols}/pause.png; // pause
   Image condition={replayForward} = 0 & {replaySpeed} > 0 & {replayPlay} = 1,x=1090,y=270,path={symbols}/frew.png;   // Fast Rewind
   Image condition={replayForward} = 1 & {replaySpeed} > 0 & {replayPlay} = 1,x=1090,y=270,path={symbols}/ffwd.png;   // Fast Forward
   Image condition={replayForward} = 0 & {replaySpeed} > 0 & {replayPlay} < 1,x=1090,y=270,path={symbols}/srew.png;   // Slow Rewind
   Image condition={replayForward} = 1 & {replaySpeed} > 0 & {replayPlay} < 1,x=1090,y=270,path={symbols}/sfwd.png;   // Slow Forward

#ifdef WEATHER

   VariableFile name=p4,file=/tmp/p4.txt,delay=10;
   VariableFile name=w,file=/tmp/weather.txt,delay=10;

   Text text=Aussen {w.varTime/%d. %b %H:%M},color={lightColor},size=18,x=1076,y=405,width=300,height=30;
